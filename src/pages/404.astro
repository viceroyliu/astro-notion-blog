---
import { Image } from "astro:assets";

import PageLayout from "@/layouts/Base.astro";
import img404 from "@/assets/404-Error-with-a-cute-animal-amico.svg";

const meta = {
	title: "哎呀，出了点问题",
	description: "请使用导航返回原处",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">404 | {meta.title}</h1>
	<p class="mb-8">{meta.description}</p>
	<div class="my-4 grid justify-center">
		<Image loading="eager" src={img404} alt="A cat is lost!" />
	</div>
</PageLayout>
